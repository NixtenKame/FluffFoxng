<% content_for :page_title, "Submit Fan Art" %>

<div class="static-content fan-art-submission">
  <h1>Submit Fan Art</h1>

  <div class="submission-intro">
    <p>We'd love to see your artwork! Please share your fan art of our fursona. Just fill out the form below with the details of your artwork.</p>
    <p><strong>Important:</strong> Please make sure you have permission to share this artwork and that it complies with our community guidelines.</p>
  </div>

  <% if @fan_art.errors.any? %>
    <div class="error-messages">
      <h2><%= pluralize(@fan_art.errors.count, "error") %> prevented this fan art from being submitted:</h2>
      <ul>
        <% @fan_art.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-container">
    <%= form_with(model: @fan_art, local: true) do |form| %>
      <div class="form-group">
        <%= form.label :title, "Art Title" %>
        <%= form.text_field :title, placeholder: "Give your artwork a title", required: true, class: "form-control" %>
        <small class="form-text">The name or title of your artwork</small>
      </div>

      <div class="form-group">
        <%= form.label :artist_name, "Your Name/Handle" %>
        <%= form.text_field :artist_name, placeholder: "Your name or artist handle", required: true, class: "form-control" %>
        <small class="form-text">How you'd like to be credited</small>
      </div>

      <div class="form-group">
        <%= form.label :artist_url, "Your Website/Profile (Optional)" %>
        <%= form.url_field :artist_url, placeholder: "https://yourwebsite.com or https://twitter.com/yourhandle", class: "form-control" %>
        <small class="form-text">Link to your website, social media, or portfolio (must start with http:// or https://)</small>
      </div>

      <div class="form-group">
        <%= form.label :image_url, "Image URL" %>
        <%= form.url_field :image_url, placeholder: "https://example.com/your-artwork.png", required: true, class: "form-control" %>
        <small class="form-text">URL to your artwork image (must start with http:// or https://)</small>
      </div>

      <div class="preview-info">
        <p><strong>Note:</strong> Your artwork will be reviewed before being added to the gallery. Please allow 24-48 hours for approval.</p>
      </div>

      <div class="form-actions">
        <%= form.submit "Submit Fan Art", class: "btn btn-primary" %>
        <%= link_to "Cancel", posts_fan_art_path, class: "btn btn-secondary" %>
      </div>
    <% end %>
  </div>

  <div class="submission-guidelines">
    <h3>Submission Guidelines</h3>
    <ul>
      <li>Artwork must be appropriate and follow our community guidelines</li>
      <li>You must have permission to share this artwork</li>
      <li>Images must be accessible via a direct URL</li>
      <li>Please provide accurate artist information</li>
      <li>Spam and inappropriate submissions may be rejected</li>
    </ul>
  </div>
</div>

