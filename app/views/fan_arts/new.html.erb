  }

  .submission-guidelines ul {
    margin: 0;
    padding-left: 2rem;
  }

  .submission-guidelines li {
    margin-bottom: 0.5rem;
    color: themed("color-text");
  }

  @media (max-width: 768px) {
    .fan-art-submission {
      padding: 1rem;
    }

    .form-container {
      padding: 1rem;
    }

    .form-actions {
      flex-direction: column;
    }

    .btn {
      width: 100%;
      text-align: center;
    }
  }
</style>
